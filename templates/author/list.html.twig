<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of Authors</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <style>
        img {
            width: 100px; /* Taille de l'image */
        }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="{{ path('app_home') }}">My Website</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_home') }}">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_contact') }}">About Us</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_list') }}">List</a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4">
        <h1 class="text-center mb-4">List of Authors</h1>

        <table class="table table-striped table-hover">
            <thead class="thead-light">
                <tr>
                    <th>Picture</th>
                    <th>Name</th>
                    <th>Number of Books</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                {% for author in authors %}
                    <tr>
                        <td>
                            <img src="{{ asset(author.picture) }}" alt="{{ author.name }}" class="img-fluid">
                        </td>
                        <td>
                            {{ author.name|upper }}<br>
                            <a href="{{ path('author_details', { 'id': author.id }) }}" class="btn btn-link p-0">Details</a>
                        </td>
                        <td>{{ author.nbrBooks }}</td>
                        <td>{{ author.email }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center">No authors found.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <!-- Total Authors and Books Section -->
        <div class="mt-4">
            <p><strong>Total Authors:</strong> {{ authors|length }}</p>
            <p><strong>Total Books:</strong> {{ authors|reduce((carry, author) => carry + author.nbrBooks, 0) }}</p>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.3.1/dist/jquery.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
</body>
</html>
