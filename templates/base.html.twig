            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_list_author') }}">Authors</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('add_author') }}">Add Author</a>
                </li>
